.details-header {
  top: 0;
  position: fixed;
}
.details-content {
  width: 91%;
  margin: -80rpx auto;
  position: relative;
  background: white;
  -webkit-border-top-left-radius: 30rpx;
          border-top-left-radius: 30rpx;
  -webkit-border-top-right-radius: 30rpx;
          border-top-right-radius: 30rpx;
  padding: 30rpx;
  margin-top: 400rpx;
  letter-spacing: 5rpx;
  word-break: break-word;
}
.details-content .avatar {
    top: 20rpx;
    position: relative;
}
.details-content .title {
    top: 50rpx;
    color: #1a1a1a;
    margin-top: 5rpx;
    font-size: 40rpx;
}
.details-content .subtitle {
    top: 0rpx;
    color: #999999;
    margin-top: 0rpx;
    font-size: 26rpx;
}
.details-content .content {
    word-break: break-word;
    margin-top: 60rpx;
    color: #2f2f2f;
    font-weight: 400;
    font-size: 30rpx;
    line-height: 2.1;
}
